.row
  .col-md-6
    = link_to image_tag(@book.image.normal.url, size: "500x500"), @book.image.url, target: "_blank"
  .col-md-6
    %h3= @book.title
    %p#description= @book.description
    %p.show-publish-time
    - if @book.published?
      %p= "Publish at #{@book.published_at_format}"
- unless @book.published?
  = link_to "Publish", publish_book_path(@book), method: :patch, remote: true, data: {disable_with: "Sending ..."}, class: "btn btn-default btn-publish-book"
= link_to "Edit", edit_book_path(@book), class: "btn btn-default", data: {disable_with: "Sending ..."}
= link_to "Destry", @book, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default", data: {disable_with: "Sending ..."}
= link_to "Back", books_path, class: "btn btn-default", data: {disable_with: "Sending ..."}
